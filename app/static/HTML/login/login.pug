doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        link(rel="stylesheet" href="/CSS/universal.css")
        link(rel="stylesheet" href="/CSS/login/login.css")
    body
        input(hidden, value=register ? "true" : "false")#register
        main
            form
                p(hidden).erro
                label(for="nome" name="Login")
                    | Login 
                    input(type="text" id="nome" required name="login")
                if register
                    label(for="email" name="email")
                        | E-mail
                        input(type="text" id="email" required name="email")
                label(for="senha" name="Senha")
                    | Senha
                    input(type="password" id="senha" required name="password")
                button(type="submit")
                    if !register
                        | Logar
                    else
                        | Cadastrar
        script(src="/JS/configs.js")
        script(src="/JS/login/submitForm.js")