doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        link(rel="stylesheet" href="CSS/login/main.css")
        link(rel="stylesheet" href="CSS/login/form.css")
    body
        main
            form(action="POST" method="/login") 
                label(for="nome" name="Login") 
                    | Login 
                    input(type="text" id="nome" required name="login")
                label(for="email" name="email")
                    | E-mail
                    input(type="text" id="email" required name="email")
                label(for="senha" name="Senha")
                    | Senha
                    input(type="password" id="senha" required name="senha")
                button(type="submit")
                    | Register 